{
  "name": "battleship",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/tinyCatzilla/battleship.git",
  "author": "catzilla",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.1",
    "@types/socket.io-client": "^3.0.0",
    "@types/ws": "^8.5.5",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "ws": "^8.0.0"
  },
  "scripts": {
    "start-backend": "tsc-watch --onSuccess \"node ./build/backend/server.js\" --project ./tsconfig.json",
    "start-backend2": "tsc-watch --onSuccess \"nodemon ./build/backend/server.js\" --project ./tsconfig.json",
    "start-frontend": "serve ./build/frontend -s -l 5000",
    "build-frontend": "c --project tsconfig.json",
    "start": "concurrently \"yarn build\" \"yarn start-backend\" \"yarn build-frontend\" \"yarn start-frontend\"",
    "clean": "rimraf build/",
    "copy-files": "copyfiles --all --up 1 --exclude \"./**/*.{ts,tsx}\" \"./src/**/*\" build/",
    "build": "yarn clean && tsc && yarn copy-files",
    "dev": "concurrently \"yarn build\" \"yarn start-backend\" \"yarn build-frontend\" \"yarn start-frontend\""
  }
}
